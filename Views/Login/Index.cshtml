@{
    ViewBag.Title = "Login System";

}
<html>
<head>
    @{ Layout = "~/Views/Shared/_LayoutLogin.cshtml"; }
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/Content/FormLogincss/stylelogin.css" />
</head>
<body>
    <div class="d-flex justify-content-center layout-body ">
        <div class="card-body">
            <img src="~/Images/ologo.png" /><br />
            <p style="font-size:20px;">Engineer New Model System</p>
        </div>
    </div>

    <div class="container">
        <div class="d-flex justify-content-center ">
            <div class="card">
                <div class="card-header">
                    <h3>Sign In</h3>
                    @*<div class="d-flex justify-content-end social_icon">
                            <span><i class="fab fa-facebook-square"></i></span>
                            <span><i class="fab fa-google-plus-square"></i></span>
                            <span><i class="fab fa-twitter-square"></i></span>
                        </div>*@
                </div>
                <div class="card-body">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control" placeholder="username" id="userName" name="userName">

                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" class="form-control" placeholder="password" id="passWord" name="passWord">
                    </div>
                    <div class="row align-items-center remember" style="display:none;">
                        <input type="checkbox">Remember Me
                    </div><br />
                    <div class="form-group">
                        <button class="btn float-right login_btn" id="btnLogin">Login</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script type="text/javascript">

                $("#btnLogin").click(function () {
                    var Objdata, username, password, loginUser;
                    username = $("#userName").val();
                    password = $("#passWord").val();
                    Objdata = { username: username, password: password };
                    loginUser = JSON.stringify(Objdata);
                    $.ajax({
                        type: "POST",
                        url: "/Login/QueryDataUser",
                        data: { JsonUser: loginUser },
                        dataType: "json",
                        success: function (data) {
                            //alert(data);
                            if (data == "1") {
                                location.href = "@Url.Action("Chart","SumaryReport")";
                            } else {
                                alert("รหัสไม่ถูกต้อง");
                            }
                        }
                    });

                });

    </script>
</body>
</html>

